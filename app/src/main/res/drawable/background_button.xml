<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#F39B9B" /> <!-- Màu nền sau khi bấm -->
            <corners android:radius="10dp" /> <!-- Bo góc -->
            <stroke android:width="1dp" android:color="#E88383" /> <!-- Viền -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#E88383" /> <!-- Màu nền trước khi bấm -->
            <corners android:radius="10dp" /> <!-- Bo góc -->
            <stroke android:width="1dp" android:color="#E88383" /> <!-- Viền -->
        </shape>
    </item>
</selector>
